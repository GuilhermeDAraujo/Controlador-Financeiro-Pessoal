@model Projeto_Controlador_Financeiro_Pessoal.Models.Pessoa

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Pessoa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Editar Pessoa</h1>

        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <form asp-action="Update">
                    <div class="form-group mb-3">
                        <label asp-for="Nome" class="control-label"><strong>Nome</strong></label>
                        <span asp-validation-for="Nome" class="text-danger"></span>
                        <input asp-for="Nome" class="form-control" />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="CPF" class="control-label"><strong>CPF ou CNPJ</strong></label>
                        <span asp-validation-for="CPF" class="text-danger"></span>
                        <input asp-for="CPF" class="form-control" />
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Email" class="control-label"><strong>E-mail</strong></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <div class="form-group mb-4">
                        <input type="submit" value="Editar" class="btn btn-primary w-100" />
                    </div>
                </form>
                <a asp-action="Index" class="btn btn-success w-100 mt-3">Voltar</a>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>

</html>
