@model Projeto_Controlador_Financeiro_Pessoal.Models.Pessoa

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar Nova Pessoa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Cadastrar Nova Pessoa</h1>

        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <form asp-action="Create" class="bg-light p-4 rounded shadow-sm">
                    <div class="form-group mb-3">
                        <label asp-for="Nome" class="form-label"><strong>Nome</strong></label>
                        <span asp-validation-for="Nome" class="text-danger"></span>
                        <input asp-for="Nome" class="form-control" placeholder="Digite o Nome" />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="CPF" class="form-label"><strong>CPF</strong></label>
                        <span asp-validation-for="CPF" class="text-danger"></span>
                        <input asp-for="CPF" class="form-control" placeholder="Digite o CPF" />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label"><strong>E-mail</strong></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <input asp-for="Email" class="form-control" placeholder="Digite o E-mail" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Cadastrar" class="btn btn-primary w-100" />
                    </div>
                </form>
                <a asp-action="Index" class="btn btn-success w-100 mt-3">Voltar</a>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
