@model Projeto_Controlador_Financeiro_Pessoal.Models.Lancamento

<h1 class="text-center my-4">Cadastrar Novo Lançamento</h1>

<form asp-action="Delete" class="container" onsubmit="return confirmExluir();">
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="PessoaId" class="form-label"><strong>Pessoa</strong></label>
            <select asp-for="PessoaId" asp-items="@ViewBag.Pessoa" class="form-control" readonly></select>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="BancoId" class="form-label"><strong>Banco</strong></label>
            <select asp-for="BancoId" asp-items="@ViewBag.Banco" class="form-control" readonly></select>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="DataCompra" class="form-label"><strong>Data da Venda</strong></label>
            <input asp-for="DataCompra" class="form-control" readonly/>
            <span asp-validation-for="DataCompra" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Valor" class="form-label"><strong>Valor</strong></label>
            <input asp-for="Valor" class="form-control" readonly/>
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="TipoPagamento" class="form-label"><strong>Tipo do Pagamento</strong></label>
            <select asp-for="TipoPagamento" asp-items="@ViewBag.TipoPagamento" class="form-control" readonly></select>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Descricao" class="form-label"><strong>Descrição</strong></label>
            <input asp-for="Descricao" class="form-control" readonly/>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
    </div>
    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-primary w-100">Salvar Exclusão</button>
        <a asp-action="Index" class="btn btn-success w-100 me-2">Voltar</a>
    </div>
</form>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        @Html.ValidationSummary(false, "Corrija os seguintes erros: ")
    </div>
}
<script type="text/javascript">
    function confirmExluir() {
        var pessoaNome = "@Model.Pessoa.Nome";
        var bancoNome = "@Model.Banco.NomeBanco";
        var dataCompra = "@Model.DataCompra.ToString("dd/MM/yyyy")";
        var descricao = "@Model.Descricao";
        var valor = "@Model.Valor.ToString("C2")";

        var mensagem = `Tem certeza que deseja excluir o lançamento: \nPessoa: ${pessoaNome} \nBanco: ${bancoNome} \nData da compra: ${dataCompra} \nDescrição: ${descricao} \nValor: ${valor}`;
        return confirm(mensagem);
    }
</script>