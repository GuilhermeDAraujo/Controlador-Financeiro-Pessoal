<h2 class="text-center">Relatório de Compras</h2>

<div class="container my-4">
    <div class="row">
        <div class="col-12">
            <button type="button" class="btn btn-primary btn-block w-100" onclick="Relatorio('CarteiraDebito')">Relatório de Compras a Vista</button>
        </div>
    </div>
    
    <div class="row mt-3">
        <div class="col-12">
            <button type="button" class="btn btn-primary btn-block w-100" onclick="Relatorio('Credito')">Relatório de Compras no Crédito</button>
        </div>
    </div>
    
    <div class="row mt-3">
        <div class="col-12">
            <a asp-action="Menu" asp-controller="Home" class="btn btn-success w-100">Voltar</a>
        </div>
    </div>
</div>

<script>
    function Relatorio(action){
         window.location.href="../Relatorio/" + action;
    }
</script>